<section
  id="MainProduct-{{ section.id }}"
  class="main-product--section page-width-mob-full-width section-{{ section.id }}-padding"
  data-section="{{ section.id }}"
>
  {{ 'section-main-product.css' | asset_url | stylesheet_tag }}
  {{ 'component-accordion.css' | asset_url | stylesheet_tag }}
  {{ 'component-price.css' | asset_url | stylesheet_tag }}
  {{ 'component-rte.css' | asset_url | stylesheet_tag }}
  {{ 'component-loading-overlay.css' | asset_url | stylesheet_tag }}
  {{ 'component-slider.css' | asset_url | stylesheet_tag }}

  {%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }
    .product-media-image {
      background: {{ section.settings.media_bg_col }};
    }
    .gallery-slider--thumbnail, .lightbox-thumbnail {
      background: {{ section.settings.media_bg_col }} !important;
    }
    .product__info-container .product__title, .product__vendor_block, .product-block-rating-wrapper, .product__complementary_products, .product-feature-icon-grid--wrapper, .product-inventory-container, .product-app-block, .product-text-clamp-toggle, .product-description-standard, .main-product--badge, .product-info-tabs, .product-breadcrumb-block, .product__info-container .product-price-block, .product__info-container .product__text, .product__info-container, .product-custom-liquid-block {
      margin-bottom: {{ section.settings.blocks_vertical_spacing }}px;
    }
    .product-main-info-section div:has(.installment) {
      margin-bottom: {{ section.settings.blocks_vertical_spacing | at_least: 15 }}px;
    }
    .product-share-component {
      margin-top: -5px;
      margin-bottom: {{ section.settings.blocks_vertical_spacing | minus: 5 | at_least: 10 }}px;
    }
    .product__info-container .product-variant-picker-block, .product__info-container .product-form__quantity {
      margin-bottom: {{ section.settings.blocks_vertical_spacing | at_least: 20 }}px;
    }
    .product__tax {
      margin-top: -{{ section.settings.blocks_vertical_spacing }}px;
      margin-bottom: {{ section.settings.blocks_vertical_spacing }}px;
    }
    .product__cross-links {
      margin-top: {{ section.settings.blocks_vertical_spacing | at_least: 20 }}px;
      margin-bottom: {{ section.settings.blocks_vertical_spacing | at_least: 20 }}px;
    }
    .product-form__input:nth-child(2), .product-form__input:nth-child(3) {
      margin-top: {{ section.settings.blocks_vertical_spacing }}px;
    }
    .product-form__buttons {
      margin-top: {{ section.settings.blocks_vertical_spacing | at_least: 20 }}px;
    }
    .product-buy-buttons-wrapper {
      margin-bottom: {{ section.settings.blocks_vertical_spacing | at_least: 20 }}px;
    }
    .product-block-hr-top {
      margin-bottom: {{ section.settings.blocks_vertical_spacing | at_least: 20 }}px;
    }
    .product-block-hr-bottom {
      margin-top: {{ section.settings.blocks_vertical_spacing | at_least: 20 }}px;
    }
    {% if settings.badge_corner_radius > 18 %}
    .main-product--badge > span {
      padding: 5px 11px;
    }
    {% endif %}
    {% if section.settings.media_mobile_width == 'page-width' %}
    @media screen and (max-width: 750px) {
      .product-media-component {
        padding: var(--page-margin-mobile);
      }
      .product-media-component img, .product-media-component video {
        border-radius: var(--media-radius);
      }
    }
      @media screen and (min-width: 750px) and (max-width: 950px) {
      .product-media-component {
        padding: var(--page-margin-tablet);
      }
      .product-media-component img, .product-media-component video {
        border-radius: var(--media-radius);
      }
    }
    {% endif %}

    }
    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
      {% if section.settings.product_section_width == 'standard' %}
        .product-main-top-section {
          padding-left: var(--page-margin-tablet);
          padding-right: var(--page-margin-tablet);
        }
      {% endif %}
    }

    @media only screen and (min-width: 950px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
      .product__info-container {
        max-width: {{ section.settings.text_section_max_width }}px;
      }
      .product__info-container {
        padding-top: {{ section.settings.text_section_padding | divided_by: 10 }}rem;
      }
      {% if section.settings.product_section_width == 'standard' %}
        .product-main-top-section {
          padding-left: var(--page-margin-tablet);
          padding-right: var(--page-margin-tablet);
        }
      {% endif %}
    }

    @media only screen and (min-width: 1025px) {
      {% if section.settings.product_section_width == 'standard' %}
        .product-main-top-section {
          padding-left: var(--page-margin-desktop);
          padding-right: var(--page-margin-desktop);
        }
      {% endif %}
    }

    {% if settings.page_margin_desktop > 120 %}
    @media only screen and (min-width: 950px) and (max-width: 1300px) {
      .product-main-info-section {
        padding-left: 4rem !important;
      }
    }
    {% endif %}

    {%- if section.settings.bottom_border -%}
      .product__info-container {
        margin-bottom: 2rem;
      }
      @media only screen and (min-width: 950px) {
      .product__info-container {
        margin-bottom: 4rem;
      }
      .main-product--section .section-border-width-normal {
        margin-top: {{ section.settings.padding_bottom }}px;
      }
      .section-{{ section.id }}-padding {
        padding-bottom: 0;
      }
    }
    {%- endif -%}
    {%- if section.settings.bottom_border and section.settings.border_width == 'full' -%}
      .product__info-container {
        margin-bottom: {{ section.settings.padding_bottom | times: 0.5 }}px;
      }
      @media only screen and (min-width: 950px) {
      .product__info-container {
        margin-bottom: {{ section.settings.padding_bottom }}px;
      }
      }
    {%- endif -%}
    @media only screen and (max-width: 750px) {
      .sticky-buy-buttons .product-form {
        padding: {{ section.settings.sticky_buttons_padding }}px {{ section.settings.sticky_buttons_padding_horizontal }}px {{ section.settings.sticky_buttons_padding }}px {{ section.settings.sticky_buttons_padding_horizontal }}px;
        box-shadow: 0px 0px 12px 0px rgba(0,0,0,{{ section.settings.sticky_buttons_shadow | divided_by: 100.0 }});
      }
    }
    {%- if section.settings.padding_top > 0 -%}
    .pmc-thumbnail-position--adjacent-left-normal .gallery-slider-thumbnails,
    .pmc-thumbnail-position--adjacent-left-large .gallery-slider-thumbnails,
    .pmc-thumbnail-position--adjacent-right-normal .gallery-slider-thumbnails,
    .pmc-thumbnail-position--adjacent-right-large .gallery-slider-thumbnails {
      top: 0 !important;
    }
    {%- endif -%}
  {%- endstyle -%}

  <script src="{{ 'product-info.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'product-media-gallery.js' | asset_url }}" defer="defer"></script>
  {%- if request.design_mode -%}
    <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
  {%- endif -%}

  {%- assign first_3d_model = product.media | where: 'media_type', 'model' | first -%}
  {%- if first_3d_model -%}
    <script type="application/json" id="ProductJSON-{{ product.id }}">
      {{ product.media | where: 'media_type', 'model' | json }}
    </script>
    <script src="{{ 'product-model.js' | asset_url }}" defer></script>
    {{ 'component-product-model.css' | asset_url | stylesheet_tag }}
    <link
      id="ModelViewerStyle"
      rel="stylesheet"
      href="https://cdn.shopify.com/shopifycloud/model-viewer-ui/assets/v1.0/model-viewer-ui.css"
      media="print"
      onload="this.media='all'"
    >
    <link
      id="ModelViewerOverride"
      rel="stylesheet"
      href="{{ 'component-model-viewer-ui.css' | asset_url }}"
      media="print"
      onload="this.media='all'"
    >
  {%- endif -%}

  <div class="product-main-top-section product-main-top-section-margin--{{ section.settings.product_section_width }} product-main-section-layout-{{ section.settings.media_section_width }}">
    <div
      class="product-main-media-section{% if section.settings.product_section_width == 'standard' %} product-main-media-section-rounded-media{% endif %}"
      id="pageGallery-{{ section.id }}"
    >
      {% unless product.media.size == 0 %}
        {% render 'product-media-gallery',
          layout: section.settings.gallery_layout,
          media_aspect_ratio: section.settings.gallery_aspect_ratio,
          media_scale: section.settings.gallery_media_scale,
          media_screen_height: section.settings.gallery_height_limit_desktop,
          enable_zoom: section.settings.zoom_enable,
          video_autoplay: section.settings.media_video_autoplay,
          grid_spacing: section.settings.gallery_grid_spacing,
          mobile_navigation: section.settings.mobile_media_nav,
          mobile_bullet_position: section.settings.mobile_media_nav_position,
          desktop_navigation: section.settings.desktop_media_nav,
          thumbnail_size_setting: section.settings.desktop_media_thumbnail_size,
          thumbnail_position_setting: section.settings.desktop_media_thumbnail_position,
          thumbnail_placement: section.settings.desktop_media_thumbnail_placement,
          balance_grid: section.settings.balance_grid
        %}
      {% endunless %}
    </div>

    <div class="product product-main-info-section align-{{ section.settings.info_txt_alignment }} vertical-align-{{ section.settings.text_section_vertical_position }}">
      <product-info
        id="ProductInfo-{{ section.id }}"
        data-section="{{ section.id }}"
        data-url="{{ product.url }}"
        class="product__info-container product-info-justify-{{ section.settings.text_section_position }}{% if section.settings.enable_sticky_info %} product__column-sticky{% endif %}{% if section.settings.enable_sticky_buttons %} sticky-buy-buttons sticky-buy-buttons--border-{{ section.settings.sticky_buttons_border }}{% endif %}"
      >
        {%- assign product_form_id = 'product-form-' | append: section.id -%}

        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when '@app' -%}
              <div class="product-app-block">
                {% render block %}
              </div>

            {%- when 'breadcrumb' -%}
              {% if product.metafields.custom.breadcrumb != blank %}
                <div class="product-breadcrumb-block text-small {{ block.settings.text_case }}">
                  {% for collection in product.metafields.custom.breadcrumb.value %}
                    <a href="{{ collection.url }}">{{ collection.title }}</a>
                    <span class="product-breadcrumb--divider">
                      {%- if block.settings.divider_style == 'slash' %}/{% else %}&bull;{% endif -%}
                    </span>
                  {% endfor %}
                  <span class="product-breadcrumb--product-title">{{ product.title }}</span>
                </div>
              {% endif %}

            {%- when 'text' -%}
              <style>
                .product-text-{{ block.id }} {
                  padding: {{ block.settings.padding }}px;
                  border-radius: {{ block.settings.border_radius }}px;
                }
              </style>
              <div
                class="product__text product-text-{{ block.id }} color-scheme-{{ block.settings.text_color }} color-scheme-{{ block.settings.bg_color }} rte"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.text }}
              </div>

            {%- when 'tags' -%}
              {% assign hascustombadges = false %}
              {% for tag in product.tags %}
                {% if tag contains 'Badge:' %}
                  {% assign hascustombadges = true %}
                {% endif %}
              {% endfor %}

              {% if hascustombadges %}
                <div class="main-product--badge" {{ block.shopify_attributes }}>
                  {% for tag in product.tags %}
                    {% if tag contains 'Badge:' %}
                      <span>{{ tag | remove: 'Badge: ' }}</span>
                    {% endif %}
                  {% endfor %}
                </div>
              {% endif %}

            {%- when 'cross_links' -%}
              {% if product.metafields.custom.cross_links != blank %}
                <div class="product__cross-links">
                  <div class="product-cross-link-heading">
                    {{ block.settings.heading }}

                    {% assign current_product = product | sort %}
                    {% assign current_product_url = product.url %}
                    {% assign cross_list = product.metafields.custom.cross_links.value
                      | concat: current_product
                      | sort_natural: 'url'
                    %}
                    {% assign cross_list_sorted = cross_list %}

                    {% assign metafield = product.metafields.custom.color.value %}

                    {% for metaobject in metafield %}
                      {% capture swatch_label_name %}
                {% for metaobject in metafield %}{% if metaobject.name %}{{ metaobject.name }}{% unless forloop.last %}/{% endunless %}{% endif %}{% endfor %}
                {% endcapture %}
                    {% endfor %}

                    <div class="caption">
                      {% if block.settings.label != blank %}{{ block.settings.label }} {% endif -%}
                      {%- if block.settings.show_color_label %}{{ swatch_label_name }}{% endif %}
                    </div>
                  </div>

                  {% if block.settings.link_type == 'thumbnail' %}
                    <div class="product-cross-links-list pcl-ratio-{{ section.settings.gallery_aspect_ratio }}">
                      {% assign current_product = product | sort %}
                      {% assign current_product_url = product.url %}
                      {% assign cross_list = product.metafields.custom.cross_links.value
                        | concat: current_product
                        | sort_natural: 'url'
                      %}
                      {% assign cross_list_sorted = cross_list %}

                      {% for product in cross_list_sorted %}
                        <div class="product-cross-link-item">
                          <a href="{{ product.url }}">
                            <div class="product-cross-link-thumbnail{% if product.url == current_product_url %} cl-item-selected{% endif %}">
                              {{ product.featured_media | image_url: width: 140 | image_tag: loading: 'lazy' }}
                            </div>
                          </a>
                        </div>
                      {% endfor %}
                    </div>
                  {% endif %}

                  {% if block.settings.link_type == 'swatch_square'
                    or block.settings.link_type == 'swatch_round'
                    or block.settings.link_type == 'swatch_rectangle'
                  %}
                    <ul role="list" class="cross-link-swatch-list swatch-list-style-{{ block.settings.link_type }}">
                      {% for product in cross_list_sorted %}
                        {% assign swatch_color = '' %}
                        {% assign swatch_secondary_color = '' %}

                        {% assign metafield = product.metafields.custom.color.value %}

                        {% for metaobject in metafield %}
                          {% assign swatch_image = metaobject.swatch_image.value %}
                          {% if forloop.first %}
                            {% assign swatch_color = metaobject.swatch.value %}
                          {% endif %}
                          {% if forloop.index == 2 %}
                            {% assign swatch_secondary_color = metaobject.swatch.value %}
                          {% endif %}
                        {% endfor %}

                        {% capture swatch_accessibility_name %}
              {% for metaobject in metafield %}{% if metaobject.name %}{{ metaobject.name }}{% unless forloop.last %}/{% endunless %}{% endif %}{% endfor %}
              {% endcapture %}

                        <li class="swatch-list-item text-small">
                          <a
                            {% if product.url == current_product_url %}
                              class="selected"
                            {% endif %}
                            href="{{ product.url }}"
                            title="{{ swatch_accessibility_name | strip }}"
                          >
                            <div class="swatch-dot" style="background: {{ swatch_color }}">
                              {% if swatch_image contains 'png' or swatch_image contains 'jpg' %}
                                {{ swatch_image | image_url: width: 60 | image_tag: loading: 'lazy' }}
                              {% endif %}
                              {% if swatch_secondary_color != empty %}
                                <div
                                  class="secondary-swatch-color"
                                  style="background: {{ swatch_secondary_color }}"
                                ></div>
                              {% endif %}
                            </div>
                          </a>
                        </li>
                      {% endfor %}
                    </ul>
                  {% endif %}
                </div>
              {% endif %}

            {%- when 'title' -%}
              <div class="product__title" {{ block.shopify_attributes }}>
                <h1 class="{{ block.settings.title_size }}">{{ product.title }}</h1>
              </div>

            {%- when 'icon_grid' -%}
              {% assign icon_render_size = block.settings.icon_size_desktop | times: 2 %}
              <style>
                .product-feature-icon-grid {
                  display: flex;
                  column-gap: {{ block.settings.grid_spacing_mobile }}px;
                  row-gap: {{ block.settings.grid_spacing_mobile }}px;
                }
                .product-feature-icon--text {
                  max-width: {{ block.settings.icon_text_max_width }}px;
                }
                .product-feature-icon--image img {
                  width: {{ block.settings.icon_size_mobile }}px;
                  height: auto;
                }
                {% unless block.settings.grid_columns_mobile == 'auto' %}
                .product-feature-icon-grid {
                  display: grid;
                  grid-template-columns: repeat({{ block.settings.grid_columns_mobile }}, 1fr);
                  grid-template-rows: repeat(1, 1fr);
                }
                {% endunless %}
                @media only screen and (min-width: 950px) {
                  .product-feature-icon--image img {
                    width: {{ block.settings.icon_size_desktop }}px;
                    height: auto;
                  }
                }
                {% unless block.settings.grid_columns_mobile == 'auto' %}
                @media only screen and (min-width: 950px) {
                  .product-feature-icon-grid {
                    display: grid;
                    column-gap: {{ block.settings.grid_spacing_desktop }}px;
                    row-gap: {{ block.settings.grid_spacing_desktop }}px;
                    grid-template-columns: repeat({{ block.settings.grid_columns_desktop }}, 1fr);
                    grid-template-rows: repeat(1, 1fr);
                  }
                }
                {% endunless %}
                {% if block.settings.grid_columns_desktop == 'auto' %}
                .product-feature-icon-grid {
                  display: flex;
                  align-items: center;
                  justify-content: center;
                  flex-wrap: wrap;
                  column-gap: {{ block.settings.grid_spacing_desktop }}px;
                  row-gap: {{ block.settings.grid_spacing_desktop }}px;
                }
                .product-feature-icon--item {
                  width: auto;
                }
                {% endif %}
              </style>

              <div
                class="product-feature-icon-grid--wrapper align-{{ block.settings.icon_alignment }}"
                {{ block.shopify_attributes }}
              >
                <ul class="product-feature-icon-grid icon-layout--{{ block.settings.icon_layout }} grid-columns-mobile--{{ block.settings.grid_columns_mobile }} grid-columns-desktop--{{ block.settings.grid_columns_desktop }}">
                  {% if block.settings.icon_one_image %}
                    <li class="product-feature-icon--item caption">
                      <div class="product-feature-icon--image">
                        {{
                          block.settings.icon_one_image
                          | image_url: width: icon_render_size
                          | image_tag: loading: 'lazy'
                        }}
                      </div>
                      <div class="product-feature-icon--text">{{ block.settings.icon_one_label }}</div>
                    </li>
                  {% endif %}

                  {% if block.settings.icon_two_image %}
                    <li class="product-feature-icon--item caption">
                      <div class="product-feature-icon--image">
                        {{
                          block.settings.icon_two_image
                          | image_url: width: icon_render_size
                          | image_tag: loading: 'lazy'
                        }}
                      </div>
                      <div class="product-feature-icon--text">{{ block.settings.icon_two_label }}</div>
                    </li>
                  {% endif %}

                  {% if block.settings.icon_three_image %}
                    <li class="product-feature-icon--item caption">
                      <div class="product-feature-icon--image">
                        {{
                          block.settings.icon_three_image
                          | image_url: width: icon_render_size
                          | image_tag: loading: 'lazy'
                        }}
                      </div>
                      <div class="product-feature-icon--text">{{ block.settings.icon_three_label }}</div>
                    </li>
                  {% endif %}

                  {% if block.settings.icon_four_image %}
                    <li class="product-feature-icon--item caption">
                      <div class="product-feature-icon--image">
                        {{
                          block.settings.icon_four_image
                          | image_url: width: icon_render_size
                          | image_tag: loading: 'lazy'
                        }}
                      </div>
                      <div class="product-feature-icon--text">{{ block.settings.icon_four_label }}</div>
                    </li>
                  {% endif %}

                  {% if block.settings.icon_five_image %}
                    <li class="product-feature-icon--item caption">
                      <div class="product-feature-icon--image">
                        {{
                          block.settings.icon_five_image
                          | image_url: width: icon_render_size
                          | image_tag: loading: 'lazy'
                        }}
                      </div>
                      <div class="product-feature-icon--text">{{ block.settings.icon_five_label }}</div>
                    </li>
                  {% endif %}

                  {% if block.settings.icon_six_image %}
                    <li class="product-feature-icon--item caption">
                      <div class="product-feature-icon--image">
                        {{
                          block.settings.icon_six_image
                          | image_url: width: icon_render_size
                          | image_tag: loading: 'lazy'
                        }}
                      </div>
                      <div class="product-feature-icon--text">{{ block.settings.icon_six_label }}</div>
                    </li>
                  {% endif %}
                </ul>
              </div>

            {% when 'vendor' %}
              <div class="product__vendor_block" {{ block.shopify_attributes }}>
                {% if block.settings.link_to_collection %}
                  <a href="{{ routes.collections_url }}/{{ product.vendor | handleize }}">{{ product.vendor }}</a>
                {% else %}
                  {{ product.vendor }}
                {% endif %}
              </div>
              
                This is a comment in Liquid.
                It will not show up in the rendered HTML.

                            {%- when 'price' -%}
                              {% assign pricesizeclass = block.settings.price_size %}
                              <div
                                class="product-price-block no-js-hidden"
                                id="price-{{ section.id }}"
                                role="status"
                                {{ block.shopify_attributes }}
                              >
                                {%- render 'price',
                                  product: product,
                                  use_variant: true,
                                  show_discounts: block.settings.show_discounts,
                                  price_class: pricesizeclass
                                -%}
                              </div>
                              {% if block.settings.price_show_taxes %}
                                {%- if shop.taxes_included or shop.shipping_policy.body != blank -%}
                                  <div class="product__tax caption">
                                    {%- if shop.taxes_included -%}
                                      {{ 'products.product.include_taxes' | t }}
                                    {%- endif -%}
                                    {%- if shop.shipping_policy.body != blank -%}
                                      {{ 'products.product.shipping_policy_html' | t: link: shop.shipping_policy.url }}
                                    {%- endif -%}
                                  </div>
                                {%- endif -%}
                              {% endif %}
                              {% if block.settings.show_shoppay_banner %}
                                <div {{ block.shopify_attributes }}>
                                  {%- assign product_form_installment_id = 'product-form-installment-' | append: section.id -%}
                                  {%- form 'product', product, id: product_form_installment_id, class: 'installment caption-large' -%}
                                    <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                                    {{ form | payment_terms }}
                                  {%- endform -%}
                                </div>
                              {% endif %}
              {% comment %}
            {%- when 'price' -%}
              {% assign pricesizeclass = block.settings.price_size %}
              <div
                class="product-price-block no-js-hidden"
                id="price-{{ section.id }}"
                role="status"
                {{ block.shopify_attributes }}
              >
                {% assign price_cents = product.selected_or_first_available_variant.price %}
                {% assign compare_cents = product.selected_or_first_available_variant.compare_at_price %}
                {% assign symbol = cart.currency.symbol %}

                <span class="price {{ pricesizeclass }}">
                  {{ symbol -}}
                  {{- price_cents | times: 0.01 | round }}
                </span>

                {% if compare_cents and compare_cents > price_cents %}
                  <span class="price price--compare">
                    {{ symbol -}}
                    {{- compare_cents | times: 0.01 | round }}
                  </span>
                {% endif %}
              </div>

              {% if block.settings.price_show_taxes %}
                {%- if shop.taxes_included or shop.shipping_policy.body != blank -%}
                  <div class="product__tax caption">
                    {%- if shop.taxes_included -%}
                      {{ 'products.product.include_taxes' | t }}
                    {%- endif -%}
                    {%- if shop.shipping_policy.body != blank -%}
                      {{ 'products.product.shipping_policy_html' | t: link: shop.shipping_policy.url }}
                    {%- endif -%}
                  </div>
                {%- endif -%}
              {% endif %}

              {% if block.settings.show_shoppay_banner %}
                <div {{ block.shopify_attributes }}>
                  {%- assign product_form_installment_id = 'product-form-installment-' | append: section.id -%}
